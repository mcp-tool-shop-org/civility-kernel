{
  "name": "@mcptoolshop/civility-kernel",
  "version": "0.2.0",
  "description": "A modular policy layer that makes agent behavior preference-governed instead of purely efficiency-maximizing.",
  "author": "mcp-tool-shop <64996768+mcp-tool-shop@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcp-tool-shop-org/civility-kernel.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "homepage": "https://github.com/mcp-tool-shop-org/civility-kernel#readme",
  "keywords": [
    "agent",
    "mcp",
    "policy",
    "governance",
    "ai-safety",
    "constraints",
    "preferences",
    "decision",
    "civility"
  ],
  "files": [
    "dist",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "example:basic": "tsx examples/basic.ts",
    "example:parameterized": "tsx examples/parameterized.ts",
    "example:explain": "tsx examples/explain-policy.ts",
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "policy:check": "tsx scripts/policy-check.ts policies/default.json --strict",
    "policy:explain": "tsx scripts/policy-check.ts policies/default.json --explain --format markdown",
    "policy:propose": "tsx scripts/policy-check.ts policies/default.json --propose policies/proposed.json",
    "policy:canonicalize": "tsx scripts/policy-check.ts policies/default.json --apply",
    "clean": "node -e \"fs.rmSync('dist', { recursive: true, force: true })\"",
    "prepack": "npm run clean && npm run build",
    "guard:no-root-policy": "node -e \"const fs=require('fs'); if (fs.existsSync('policy')) { console.error('Root policy/ directory detected. Remove it.'); process.exit(1);} \""
  },
  "devDependencies": {
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
